generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Influencer {
  id        Int      @id @default(autoincrement())
  name      String
  platform  String
  followers Int
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

  @@unique([name, platform], name: "name_platform")
}

model Post {
  id           Int      @id @default(autoincrement())
  influencerId Int
  content      String
  likes        Int
  comments     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  influencer Influencer @relation(fields: [influencerId], references: [id])
}
